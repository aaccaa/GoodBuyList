<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/search_bar"
        android:gravity="right"
        android:orientation="horizontal" >

           <!-- used for barcode scanning -->
        
        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:adjustViewBounds="true"
            android:onClick="scanNow"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search_green_button" />
        
                <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             />
        

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:adjustViewBounds="true"
            android:onClick="goToMenu"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/setting_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/search_bar"
        android:gravity="right"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editTextPassword1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            
            android:background="@drawable/round_edit"
            android:hint="  Products, Lists, Users... " />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:adjustViewBounds="true"
            android:onClick="goToMenu"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#b0cf53"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btsearchcategory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onSelectFragment"
            android:text="Categories"
            android:textColor="#006203"
            android:textStyle="italic"
            android:typeface="serif" />

        <Button
            android:id="@+id/btsearchmost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onSelectFragment"
            android:text="most followed"
            android:textColor="#006203"
            android:textStyle="italic"
            android:typeface="serif" />

        <Button
            android:id="@+id/btsearchatoz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onSelectFragment"
            android:text="A to Z"
            android:textColor="#006203"
            android:textStyle="italic"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_holder_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>